{
  "name": "lagden-utils",
  "version": "2.0.0",
  "description": "Some utilities",
  "keywords": [
    "utilities",
    "utils",
    "lib",
    "helpers"
  ],
  "bug": {
    "url": "https://github.com/lagden/utils/issues",
    "email": "lagden@gmail.com"
  },
  "license": "MIT",
  "author": {
    "name": "Thiago Lagden",
    "email": "lagden@gmail.com",
    "url": "http://lagden.in"
  },
  "repository": "lagden/utils",
  "scripts": {
    "report": "nyc report --reporter=html",
    "coverage": "nyc report --reporter=lcov | codecov",
    "pretest": "xo",
    "test": "nyc ava",
    "start": "gulp watch"
  },
  "engines": {
    "node": ">=4.0.0"
  },
  "devDependencies": {
    "ava": "^0.13.0",
    "babel": "^6.5.2",
    "babel-plugin-transform-es2015-modules-amd": "^6.6.5",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-stage-3": "^6.5.0",
    "babel-register": "^6.7.2",
    "codecov": "^1.0.1",
    "gulp": "^3.9.1",
    "gulp-babel": "^6.1.2",
    "gulp-xo": "^0.9.0",
    "jsdom": "^8.1.0",
    "nyc": "^6.0.0",
    "xo": "^0.13.0"
  },
  "xo": {
    "ignore": [
      "dist/**/*.js"
    ],
    "envs": [
      "es6"
    ],
    "esnext": true,
    "global": [
      "window",
      "document",
      "HTMLElement"
    ]
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-3"
    ]
  },
  "ava": {
    "require": [
      "babel-register",
      "./test/helpers/setup-browser-env.js"
    ],
    "files": [
      "./test/index.js"
    ],
    "babel": "inherit",
    "no-cache": true
  }
}
